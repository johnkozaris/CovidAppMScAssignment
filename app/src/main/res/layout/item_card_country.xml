<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.SearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:drawablePadding="5dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="CONFIRMED "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_confirmed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="100"
                                android:textStyle="bold"
                                android:textColor="@color/color_confirmed_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:textStyle="bold"
                                android:drawablePadding="5dp"
                                android:padding="5dp"
                                android:text="NEW DEATH "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_new_deaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="10"
                                android:textColor="@color/color_deaths_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:drawablePadding="5dp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="ACTIVE "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_active"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="100"
                                android:textColor="@color/color_active_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:drawablePadding="5dp"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="DEATH "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_deaths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="10"
                                android:textColor="@color/color_deaths_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:textStyle="bold"
                                android:drawablePadding="5dp"
                                android:padding="5dp"
                                android:text="RECOVERED "
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_recovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="100"
                                android:textColor="@color/color_recovered_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_circle"
                                android:drawablePadding="5dp"

                                android:padding="5dp"
                                android:text="TOTAL REC."
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack" />

                            <TextView
                                android:id="@+id/txt_total_recovered_listitem"
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="10"
                                android:textColor="@color/color_deaths_text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="@drawable/rounded_titel"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/txt_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Greece"
                android:textColor="@color/colorWhite"

                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>